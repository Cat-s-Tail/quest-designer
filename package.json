{
  "name": "quest-designer",
  "version": "1.0.0",
  "description": "Web-based NPC and quest graph designer",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter quest-designer-backend dev\" \"pnpm --filter quest-designer-frontend dev\"",
    "web": "pnpm --filter quest-designer-frontend dev",
    "serve": "pnpm --filter quest-designer-backend dev",
    "build:frontend": "pnpm --filter quest-designer-frontend build",
    "start:backend": "pnpm --filter quest-designer-backend start",
    "start:frontend": "pnpm --filter quest-designer-frontend start"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
